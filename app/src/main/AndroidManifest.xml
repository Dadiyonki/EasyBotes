<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ultimaoportunidad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <!-- Actividad Principal -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Login y Registro -->
        <activity android:name=".activities.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".activities.RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>


        <!-- Gestión de Grupos -->
        <activity android:name=".activities.GroupsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity android:name=".activities.AddGroupActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".activities.GroupDetailsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!-- Gestión de Gastos -->
        <activity android:name=".activities.AddExpenseActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!-- Gestión de Miembros -->
        <activity android:name=".activities.GroupMembersActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!-- Saldar Deudas -->
        <activity android:name=".activities.SettleDebtsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>



    </application>

</manifest>
