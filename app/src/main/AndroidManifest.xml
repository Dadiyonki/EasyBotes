<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ultimaoportunidad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <!-- Actividad Principal -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Login y Registro -->
        <activity android:name=".activities.LoginActivity"/>
        <activity android:name=".activities.RegisterActivity"/>

        <!-- Gestión de Grupos -->
        <activity android:name=".activities.GroupsActivity"/>
        <activity android:name=".activities.AddGroupActivity"/>
        <activity android:name=".activities.GroupDetailsActivity"/>

        <!-- Gestión de Gastos -->
        <activity android:name=".activities.AddExpenseActivity"/>

        <!-- Gestión de Miembros -->
        <activity android:name=".activities.GroupMembersActivity"/>

        <!-- Saldar Deudas -->
        <activity android:name=".activities.SettleDebtsActivity"/>

    </application>

</manifest>
