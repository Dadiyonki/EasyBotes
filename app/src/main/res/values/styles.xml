<resources>

    <!-- Estilo por defecto para la aplicación -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Puedes definir colores y otros atributos aquí si lo necesitas -->
    </style>

    <!-- Estilo para botones -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FF6200EE</item> <!-- Color morado de ejemplo -->
        <item name="android:textColor">#FFFFFF</item> <!-- Texto blanco -->
        <item name="android:padding">12dp</item>
    </style>

    <!-- Estilo para EditText -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">#FFDDDDDD</item> <!-- Color gris claro de ejemplo -->
    </style>

    <!-- Estilo para TextView -->
    <style name="TextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF000000</item> <!-- Color negro -->
    </style>

</resources>
